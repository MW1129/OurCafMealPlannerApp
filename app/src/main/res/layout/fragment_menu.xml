<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Menu.MenuFragment">

    <!-- Back one day Button-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backDayButton"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:backgroundTint="@color/gray"
        app:cornerRadius="28dp"
        app:icon="?attr/actionModeCloseDrawable"
        app:iconPadding="0dp"
        app:iconGravity = "textStart"
        app:iconTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />
    <!-- Forward one day Button-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/forwardDayButton"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:backgroundTint="@color/gray"
        app:cornerRadius="28dp"
        app:icon="?attr/actionModeCloseDrawable"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleX="-1"
    />
    <!-- Date textview -->
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="209dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:text="@string/current_date"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />


    <!-- Horizontal dividing line -->
    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/dateTextView"
    />

    <!-- Breakfast textview -->
    <TextView
        android:id="@+id/breakfastTextView"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/breakfast_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalLine"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="30dp"
        android:textColor="@color/black"

    />


    <!-- Horizontal dividing line after breakfast -->
    <View
        android:id="@+id/BreakfastHorizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/breakfastTextView"
    />

    <!-- Lunch textview -->
    <TextView
        android:id="@+id/lunchTextView"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/lunch_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BreakfastHorizontalLine"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="30dp"
        android:textColor="@color/black"

    />
    <!-- Horizontal dividing line after lunch -->
    <View
        android:id="@+id/dinnerHorizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/lunchTextView"
    />

    <!-- Dinner textview -->
    <TextView
        android:id="@+id/dinnerTextView"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="@string/dinner_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lunchTextView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="30dp"
        android:textColor="@color/black"

    />
    <!-- Food option -->
    <LinearLayout
        android:id = "@+id/foodOption"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/dinnerTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <!-- Title of food -->
            <TextView
                android:id="@+id/foodTitle"
                android:text="@string/dinner_option"
                android:layout_width="200dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toTopOf="@id/foodOption"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"

            />
        <!-- Tag -->
            <TextView
                android:id="@+id/tag"
                android:background="@drawable/rounded_corners"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/lightBlue"
                android:text="@string/humane"
                android:gravity="center"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/foodOption"
                app:layout_constraintLeft_toRightOf="@id/foodTitle"
                android:layout_marginTop="10dp"
            />

        </LinearLayout>
        <!-- More info button PLACEHOLDER -->
        <Button
            android:id="@+id/moreInfoButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners"
            app:layout_constraintTop_toTopOf="@id/foodOption"
            app:layout_constraintRight_toRightOf="@id/foodOption"

        />
        <!-- Horizontal dividing line after food item -->
        <View
            android:id="@+id/menuItemDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@+id/foodOption"
            />


/>




</androidx.constraintlayout.widget.ConstraintLayout>