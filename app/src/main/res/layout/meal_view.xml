<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mealViewFrameLayout">



    <!-- Food title -->
    <TextView
        android:id="@+id/foodTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tagsLinearLayout"
        android:text="@string/dinner_option"
        android:textColor="@color/biolaBlack"

        />


        <!-- Tags Linear Layout -->
        <LinearLayout
            android:id="@+id/tagsLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintRight_toLeftOf="@id/moreInfoButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />
        <!-- More info button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/moreInfoButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/info_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent
"
            android:background="@drawable/more_info_button"
             />

    <!-- Horizontal dividing line after food item -->
    <View
        android:id="@+id/menuItemDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginStart="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>



